<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <title>Iniciar sesión | A1 Marketing</title>
</head>
<body class="min-h-screen flex bg-white">

  <!-- Left panel: branding + dashboard preview (desktop only) -->
  <div class="hidden lg:flex lg:w-3/5 relative overflow-hidden flex-col">
    <!-- Dashboard background image -->
    <img
      src="/dashboard.jpg"
      alt="Vista previa del dashboard"
      class="absolute inset-0 w-full h-full object-cover object-top"
    />
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-950/90 via-blue-900/80 to-blue-700/70"></div>

    <!-- Panel content -->
    <div class="relative z-10 flex flex-col justify-between h-full p-12">
      <!-- Brand -->
      <div class="flex items-center gap-3">
        <img src="/logoa1.jpg" alt="A1 Marketing" class="w-11 h-11 rounded-xl object-cover shadow-lg" />
        <span class="text-2xl font-black text-white tracking-tight">A1 Marketing</span>
      </div>

      <!-- Headline -->
      <div>
        <h2 class="text-5xl font-black text-white leading-tight mb-5">
          Panel de Control<br />de Campañas PPC
        </h2>
        <p class="text-blue-200 text-lg max-w-md leading-relaxed">
          Visualiza el rendimiento de tus campañas de Google Ads con datos en tiempo real y reportes automáticos.
        </p>

        <!-- Feature tags -->
        <div class="flex flex-wrap items-center gap-3 mt-8">
          {['Análisis en tiempo real', 'Multi-marca', 'Reportes automáticos', 'Google Ads'].map((tag) => (
            <span class="px-3 py-1.5 rounded-full bg-white/10 border border-white/20 text-white/80 text-xs font-medium backdrop-blur-sm">
              {tag}
            </span>
          ))}
        </div>
      </div>

      <!-- Footer note -->
      <p class="text-blue-300/60 text-xs">
        &copy; {new Date().getFullYear()} A1 Marketing. Todos los derechos reservados.
      </p>
    </div>
  </div>

  <!-- Right panel: login form -->
  <div class="w-full lg:w-2/5 flex items-center justify-center p-8 bg-white">
    <div class="w-full max-w-sm">

      <!-- Logo (visible on all screens) -->
      <div class="flex items-center gap-3 mb-10">
        <img src="/logoa1.jpg" alt="A1 Marketing" class="w-10 h-10 rounded-xl object-cover shadow-sm" />
        <span class="text-xl font-black text-zinc-900 tracking-tight">A1 Marketing</span>
      </div>

      <!-- Heading -->
      <h1 class="text-2xl font-black text-zinc-900 mb-1.5">Bienvenido de vuelta</h1>
      <p class="text-zinc-500 text-sm mb-8">Accede con tu cuenta corporativa</p>

      <!-- Error message -->
      {errorMsg && (
        <div class="mb-5 flex items-start gap-2.5 px-4 py-3 bg-amber-50 border border-amber-200 rounded-xl text-sm text-amber-700">
          <i class="fa-solid fa-circle-exclamation mt-0.5 shrink-0"></i>
          <span>{errorMsg}</span>
        </div>
      )}

      <!-- Setup error -->
      {setupError && (
        <div class="mb-5 flex items-start gap-2.5 px-4 py-3 bg-amber-50 border border-amber-200 rounded-xl text-sm text-amber-700">
          <i class="fa-solid fa-triangle-exclamation mt-0.5 shrink-0"></i>
          <span>{setupError}</span>
        </div>
      )}

      <!-- Google OAuth Button -->
      {googleAuthUrl ? (
        <a
          href={googleAuthUrl}
          class="flex items-center justify-center gap-3 w-full px-4 py-3.5 bg-white border-2 border-zinc-200 rounded-xl text-sm font-semibold text-zinc-700 hover:border-blue-400 hover:bg-blue-50 hover:text-blue-700 transition-all duration-200 group shadow-sm"
        >
          <!-- Google SVG icon -->
          <svg class="w-5 h-5 shrink-0" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span>Continuar con Google</span>
          <i class="fa-solid fa-arrow-right text-xs opacity-0 group-hover:opacity-100 -translate-x-1 group-hover:translate-x-0 transition-all duration-200"></i>
        </a>
      ) : (
        <button
          disabled
          class="flex items-center justify-center gap-3 w-full px-4 py-3.5 bg-zinc-100 border border-zinc-200 rounded-xl text-sm font-semibold text-zinc-400 cursor-not-allowed"
        >
          <i class="fa-brands fa-google"></i>
          <span>Google no disponible</span>
        </button>
      )}

      <!-- Divider -->
      <div class="flex items-center gap-3 my-5">
        <div class="flex-1 h-px bg-zinc-200"></div>
        <span class="text-xs text-zinc-400 font-medium">o continúa con email</span>
        <div class="flex-1 h-px bg-zinc-200"></div>
      </div>

      <!-- Email / Password form -->
      <form method="POST" action="/api/login" class="flex flex-col gap-3" id="email-login-form">
        <div class="flex flex-col gap-1">
          <label for="email" class="text-xs font-semibold text-zinc-600">Correo electrónico</label>
          <input
            id="email"
            type="email"
            name="email"
            required
            autocomplete="email"
            placeholder="tu@empresa.com"
            class="w-full px-3.5 py-3 rounded-xl border border-zinc-200 text-sm text-zinc-900 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
          />
        </div>

        <div class="flex flex-col gap-1">
          <label for="password" class="text-xs font-semibold text-zinc-600">Contraseña</label>
          <div class="relative">
            <input
              id="password"
              type="password"
              name="password"
              required
              autocomplete="current-password"
              placeholder="••••••••"
              class="w-full px-3.5 py-3 pr-10 rounded-xl border border-zinc-200 text-sm text-zinc-900 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
            />
            <button
              type="button"
              id="toggle-password"
              class="absolute inset-y-0 right-3 flex items-center text-zinc-400 hover:text-zinc-600 transition"
              aria-label="Mostrar u ocultar contraseña"
            >
              <i id="eye-icon" class="fa-solid fa-eye text-sm"></i>
            </button>
          </div>
        </div>

        <button
          type="submit"
          class="mt-1 w-full px-4 py-3.5 bg-blue-600 hover:bg-blue-700 active:bg-blue-800 text-white text-sm font-semibold rounded-xl transition-all duration-200 shadow-sm"
        >
          Iniciar sesión
        </button>
      </form>

      <p class="mt-6 text-center text-xs text-zinc-400">
        Solo usuarios autorizados pueden acceder a este panel.
      </p>

      <!-- Mobile footer -->
      <p class="lg:hidden text-center text-xs text-zinc-400 mt-12">
        &copy; {new Date().getFullYear()} A1 Marketing. Todos los derechos reservados.
      </p>
    </div>
  </div>

<script>
  const toggleBtn = document.getElementById('toggle-password');
  const passwordInput = document.getElementById('password') as HTMLInputElement | null;
  const eyeIcon = document.getElementById('eye-icon');

  toggleBtn?.addEventListener('click', () => {
    if (!passwordInput || !eyeIcon) return;
    const isHidden = passwordInput.type === 'password';
    passwordInput.type = isHidden ? 'text' : 'password';
    eyeIcon.classList.toggle('fa-eye', !isHidden);
    eyeIcon.classList.toggle('fa-eye-slash', isHidden);
  });
</script>
</body>
</html>
