---
import PocketBase from 'pocketbase';
import '../styles/global.css';

// If already logged in, go to home
const pbAuth = Astro.cookies.get('pb_auth');
if (pbAuth?.value) {
  return Astro.redirect('/');
}

const errorParam = Astro.url.searchParams.get('error');
const errorMessages: Record<string, string> = {
  session_expired: 'Tu sesión expiró. Vuelve a iniciar sesión.',
  auth_failed: 'Error de autenticación. Intenta de nuevo.',
  invalid_state: 'Error de seguridad. Intenta de nuevo.',
  missing_params: 'Error en el proceso de login. Intenta de nuevo.',
};
const errorMsg = errorParam ? (errorMessages[errorParam] ?? 'Error desconocido.') : null;

// Generate Google OAuth2 URL from PocketBase
const pbUrl = 'https://a1-pocketbase.adwebcrm.com';
const pb = new PocketBase(pbUrl);
pb.autoCancellation(false);

let googleAuthUrl = '';
let setupError = '';

try {
  const authMethods = await pb.collection('users').listAuthMethods();
  const googleProvider = authMethods.oauth2?.providers?.find((p: any) => p.name === 'google');

  if (googleProvider) {
    const redirectUrl = `${Astro.url.origin}/auth/callback`;
    // PocketBase authUrl already includes state + PKCE challenge; append redirect_uri
    googleAuthUrl = `${googleProvider.authUrl}${encodeURIComponent(redirectUrl)}`;

    // Store codeVerifier and state so the callback can verify and exchange
    Astro.cookies.set('oauth_code_verifier', googleProvider.codeVerifier, {
      httpOnly: true,
      secure: Astro.url.protocol === 'https:',
      sameSite: 'lax',
      maxAge: 600, // 10 min
      path: '/',
    });
    Astro.cookies.set('oauth_state', googleProvider.state, {
      httpOnly: true,
      secure: Astro.url.protocol === 'https:',
      sameSite: 'lax',
      maxAge: 600,
      path: '/',
    });
  } else {
    setupError = 'Google Auth no está habilitado en PocketBase.';
  }
} catch (e) {
  console.error('[Login] Error getting auth methods:', e);
  setupError = 'No se pudo conectar con el servidor de autenticación.';
}
