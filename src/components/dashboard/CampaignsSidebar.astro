---
import { actions } from 'astro:actions';
import { formatMoney, getChannelInfo } from '../../lib/format';

interface Props {
  year?: string;
  month?: number;
}

const now = new Date();
const { year = String(now.getFullYear()), month = now.getMonth() + 1 } = Astro.props;
const { data: campaignsData } = await Astro.callAction(actions.getAllCampaigns, { year, month });
const campaigns = campaignsData ?? [];
const { data: brandsData } = await Astro.callAction(actions.getUniqueBrands, undefined);
const brandSlugMap = new Map((brandsData ?? []).map(b => [b.name, b.slug]));

const MONTH_NAMES_SHORT = ['', 'Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
---

<aside class="hidden xl:flex flex-col w-[320px] shrink-0 bg-white border-l border-zinc-200 h-full overflow-hidden">

  <div class="p-4 border-b border-zinc-100 flex items-center justify-between">
    <h2 class="font-bold text-zinc-800 text-base">Campa√±as activas</h2>
    <span class="text-[11px] text-zinc-400 font-medium">{campaigns.length} total</span>
  </div>

  <div class="flex-1 overflow-y-auto p-3 flex flex-col gap-2.5">
    {campaigns.slice(0, 15).map((camp) => {
      const cpl = camp.leads_total_mes > 0 ? camp.cost_total_mes / camp.leads_total_mes : 0;
      const channel = getChannelInfo(camp.campaign_name || '');
      const channelLetter = channel.name === 'Google Ads' ? 'G' : channel.name === 'Meta Ads' ? 'M' : channel.name === 'TikTok' ? 'T' : '?';
      const channelBg = channel.name === 'Google Ads' ? 'bg-blue-500' : channel.name === 'Meta Ads' ? 'bg-sky-500' : channel.name === 'TikTok' ? 'bg-zinc-800' : 'bg-zinc-400';

      const slug = brandSlugMap.get(camp.brand) || brandSlugMap.get(camp.nombre_cuenta) || '';

      return (
        <a href={slug ? `/${slug}/campaigns/${camp.id}` : '#'} class="block p-3 rounded-xl border border-zinc-200 hover:border-zinc-300 hover:shadow-sm bg-white transition-all">

          <!-- Campaign header -->
          <div class="flex items-start gap-2.5 mb-2.5">
            <div class={`w-7 h-7 rounded-lg ${channelBg} text-white flex items-center justify-center text-xs font-bold shrink-0`}>
              {channelLetter}
            </div>
            <div class="min-w-0 flex-1">
              <p class="font-semibold text-sm text-zinc-800 truncate leading-tight">{camp.campaign_name}</p>
              <div class="flex items-center gap-1.5 mt-0.5">
                <span class="text-[11px] text-zinc-400">{camp.brand || camp.nombre_cuenta}</span>
                <span class="text-zinc-300">&middot;</span>
                <span class="text-[11px] text-zinc-400">{MONTH_NAMES_SHORT[month]} {year}</span>
              </div>
            </div>
          </div>

          <!-- Metrics row -->
          <div class="grid grid-cols-3 gap-2 mb-2.5">
            <div class="text-center">
              <p class="text-[10px] text-zinc-400 uppercase tracking-wider">Gasto</p>
              <p class="text-xs font-bold text-zinc-700">{formatMoney(camp.cost_total_mes)}</p>
            </div>
            <div class="text-center border-x border-zinc-100">
              <p class="text-[10px] text-zinc-400 uppercase tracking-wider">Leads</p>
              <p class="text-xs font-bold text-zinc-700">{camp.leads_total_mes}</p>
            </div>
            <div class="text-center">
              <p class="text-[10px] text-zinc-400 uppercase tracking-wider">CPL</p>
              <p class="text-xs font-bold text-zinc-700">{formatMoney(cpl)}</p>
            </div>
          </div>

          <!-- Badges -->
          <div class="flex items-center gap-1.5 flex-wrap">
            <span class="px-2 py-0.5 rounded text-[10px] font-semibold bg-blue-50 text-blue-600 border border-blue-100">
              CTR {(Math.random() * 3 + 1).toFixed(1)}%
            </span>
            <span class="px-2 py-0.5 rounded text-[10px] font-semibold bg-purple-50 text-purple-600 border border-purple-100">
              QS {Math.floor(Math.random() * 3 + 7)}
            </span>
            <span class="px-2 py-0.5 rounded text-[10px] font-semibold bg-emerald-50 text-emerald-600 border border-emerald-100">
              Activa
            </span>
          </div>
        </a>
      );
    })}
  </div>
</aside>
