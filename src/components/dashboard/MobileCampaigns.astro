---
import { actions } from 'astro:actions';
import { formatMoney, getChannelInfo } from '../../lib/format';

interface Props {
  year?: string;
  month?: number;
}

const { year = "2026", month = 1 } = Astro.props;

let campaigns: any[] = [];
let error: string | null = null;

function toSlug(name: string): string {
  return name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
}

const MONTH_NAMES = ['', 'Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];

try {
  const { data: campaignsData } = await Astro.callAction(actions.getAllCampaigns, { year, month });
  campaigns = campaignsData ?? [];
} catch (e: any) {
  console.error('[MobileCampaigns] Error:', e?.message || e);
  error = e?.message || 'Error al cargar campañas';
}
---

<!-- Mobile campaigns section (visible only below xl) -->
<div class="xl:hidden">
  <div class="flex items-center justify-between mb-3">
    <h2 class="font-bold text-sm text-zinc-700">Campañas activas</h2>
    <span class="text-[11px] text-zinc-400">{campaigns.length} total</span>
  </div>

  {error ? (
    <div class="bg-rose-50 border border-rose-200 rounded-xl p-4 text-center">
      <p class="text-xs text-rose-500">Error al cargar campañas</p>
    </div>
  ) : (
    <div class="flex flex-col gap-2.5">
      {campaigns.slice(0, 8).map((camp) => {
        const cpl = camp.leads_total_mes > 0 ? camp.cost_total_mes / camp.leads_total_mes : 0;
        const channel = getChannelInfo(camp.campaign_name || '');
        const channelLetter = channel.name === 'Google Ads' ? 'G' : channel.name === 'Meta Ads' ? 'M' : channel.name === 'TikTok' ? 'T' : '?';
        const channelBg = channel.name === 'Google Ads' ? 'bg-blue-500' : channel.name === 'Meta Ads' ? 'bg-sky-500' : channel.name === 'TikTok' ? 'bg-zinc-800' : 'bg-zinc-400';
        const brandSlug = toSlug(camp.brand || camp.nombre_cuenta || '');
        const monthLabel = `${MONTH_NAMES[camp.month_num] || ''} ${camp.year || year}`;

        return (
          <a href={`/${brandSlug}/campaigns/${camp.id}`} class="block p-3 rounded-xl border border-zinc-200 bg-white hover:border-blue-300 hover:shadow-sm transition-all group">
            <div class="flex items-start gap-2.5 mb-2">
              <div class={`w-7 h-7 rounded-lg ${channelBg} text-white flex items-center justify-center text-xs font-bold shrink-0`}>
                {channelLetter}
              </div>
              <div class="min-w-0 flex-1">
                <p class="font-semibold text-sm text-zinc-800 truncate group-hover:text-blue-600 transition-colors">{camp.campaign_name}</p>
                <p class="text-[11px] text-zinc-400">{camp.brand || camp.nombre_cuenta} · {monthLabel}</p>
              </div>
              <i class="fa-solid fa-chevron-right text-[10px] text-zinc-300 group-hover:text-blue-400 mt-1.5 transition-colors"></i>
            </div>
            <div class="grid grid-cols-3 gap-2">
              <div class="text-center">
                <p class="text-[10px] text-zinc-400 uppercase">Gasto</p>
                <p class="text-xs font-bold text-zinc-700">{formatMoney(camp.cost_total_mes)}</p>
              </div>
              <div class="text-center border-x border-zinc-100">
                <p class="text-[10px] text-zinc-400 uppercase">Leads</p>
                <p class="text-xs font-bold text-zinc-700">{camp.leads_total_mes}</p>
              </div>
              <div class="text-center">
                <p class="text-[10px] text-zinc-400 uppercase">CPL</p>
                <p class="text-xs font-bold text-zinc-700">{formatMoney(cpl)}</p>
              </div>
            </div>
          </a>
        );
      })}
    </div>
  )}
</div>
